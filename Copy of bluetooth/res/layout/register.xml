<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="center" >

        <!-- 本来的注册信息应该是从服务器上获得的,但是现在需要从本地的数据库中得到 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="欢迎登陆营地安全卫士"
            android:textColor="#FFFFff"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="5"
        android:background="@drawable/ic_back_1"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="5"
            android:gravity="center" >

            <EditText
                android:id="@+id/id_LogUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cccccc"
                android:text="账号:"
                android:textColor="#000000"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="5"
            android:gravity="center" >

            <EditText
                android:id="@+id/id_LogUserPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cccccc"
                android:ems="10"
                android:text="密码:"
                android:textColor="#000000"
                android:textSize="25dp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="5"
            android:gravity="center" >

            <Button
                android:id="@+id/id_LogBtnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shapebutton"
                android:text="取消登陆"
                android:textColor="#FFFF00"
                android:textSize="20dp" />

            <Button
                android:id="@+id/id_LogBtnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shapebutton"
                android:text="确认登陆"
                android:textColor="#FFFF00"
                android:textSize="20dp" />
        </LinearLayout>
        <!-- 本来的注册信息应该是从服务器上获得的,但是现在需要从本地的数据库中得到 -->
    </LinearLayout>

</LinearLayout>